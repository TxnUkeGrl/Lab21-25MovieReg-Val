@model Movie

@Html.ValidationSummary()

<form method="post" asp-action="Results" asp-controller="Home">
    Title:<br />
    <input type="text" name="Title" value="" placeholder="Movie Title" />
    @Html.ValidationMessageFor(x => x.Title)
    <br />

    Genre:<br />
    @Html.DropDownListFor(x => x.Genre, Model.ListGenre)    
    @Html.ValidationMessageFor(x => x.Genre) <br />

    Year:<br />
    <input type="text" name="Year" value="" placeholder="Year Released" />
    @Html.ValidationMessageFor(x => x.Year)
    <br />

    Actors: <br />
    <input type="text" name="Actors" value="" placeholder="Leading Actor(s)" />
    @Html.ValidationMessageFor(x => x.Actors)
    <br />

    Directors: <br />
    <input type="text" name="Directors" value="" placeholder="Head Director" />
    @Html.ValidationMessageFor(x => x.Directors)
    <br />

    ID: <br />
    <input type="text" name="ID" value="" placeholder="ID #" />
    @Html.ValidationMessageFor(x => x.ID)
    <br />

    <br />
    @* TODO: if NotValid, don't clear info *@
    <input type="submit" value="Submit" class="submit" /><br />
</form>